@model Validacije.Models.MetaRacun

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MetaIzdavanjeRacuna</title>
</head>
<body>

<h4>MetaRacun</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MetaIzdavanjeRacuna">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrojRacuna" class="control-label"></label>
                <input asp-for="BrojRacuna" class="form-control" />
                <span asp-validation-for="BrojRacuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumRacuna" class="control-label"></label>
                <input asp-for="DatumRacuna" class="form-control" />
                <span asp-validation-for="DatumRacuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zaposlenik" class="control-label"></label>
                <input asp-for="Zaposlenik" class="form-control" />
                <span asp-validation-for="Zaposlenik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kupac" class="control-label"></label>
                <input asp-for="Kupac" class="form-control" />
                <span asp-validation-for="Kupac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Izdaj račun" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
