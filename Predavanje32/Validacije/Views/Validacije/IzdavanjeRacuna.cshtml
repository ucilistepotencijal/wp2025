@model Racun
@{
    ViewBag.Title = "Izdavanje računa";
}
<style>
   label {
        display: inline-block;
        width: 150px;
        margin: 5px;
        font-weight: bold;
    }
</style>
<h2>ViewBag.Title</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.ValidationSummary()
    </div>
    <div>
        @Html.EditorForModel()
    </div>
    <input type="submit" value="Izdaj račun" class="btn btn-primary" />
}