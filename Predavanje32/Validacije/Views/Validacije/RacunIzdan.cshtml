@model Racun
@{
    ViewBag.Title = "Račun izdan";
}
<style>
    label {
        display: inline-block;
        width: 150px;
        margin: 5px;
        font-weight: bold;
    }
</style>
<h2>Račun @Html.DisplayFor(x => x.BrojRacuna)) izdan!</h2>
<br />
<h3>
    Ispis računa
</h3>
<hr />
<div>
    @Html.LabelFor(x => x.DatumRacuna)
    @Html.DisplayFor(x => x.DatumRacuna)
</div>
<div>
    @Html.LabelFor(x => x.Zaposlenik)
    @Html.DisplayFor(x => x.Zaposlenik)
</div>
<div>
    @Html.LabelFor(x => x.Kupac)
    @Html.DisplayFor(x => x.Kupac)
</div>
<div>
    @Html.LabelFor(x => x.Cijena)
    @Html.DisplayFor(x => x.Cijena)
</div>
