@model IEnumerable<AutoServis.Models.Appointment>

@{
    ViewData["Title"] = "Termini";
}

<h2 class="mb-4">📅 Termini servisa</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    ➕ Novi termin
</a>

<table class="table table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Datum</th>
            <th>Vozilo</th>
            <th>Usluga</th>
            <th>Status</th>
            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ScheduledDate.ToString("dd.MM.yyyy HH:mm")
                </td>

                <td>
                    @item.Vehicle?.LicensePlate
                </td>

                <td>
                    @item.ServiceType?.Name
                </td>

                <td>
                    <span class="badge @GetStatusClass(item.Status)">
                        @item.Status
                    </span>
                </td>

                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-secondary">
                        👁
                    </a>

                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary">
                        ✏️
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="ChangeStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />

                            <button name="status" value="Completed"
                                    class="btn btn-sm btn-success"
                                    title="Završi">
                                ✅
                            </button>

                            <button name="status" value="Cancelled"
                                    class="btn btn-sm btn-danger"
                                    title="Otkaži">
                                ❌
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string GetStatusClass(AutoServis.Models.AppointmentStatus status)
    {
        return status switch
        {
            AutoServis.Models.AppointmentStatus.Scheduled => "bg-warning text-dark",
            AutoServis.Models.AppointmentStatus.InProgress => "bg-info text-dark",
            AutoServis.Models.AppointmentStatus.Completed => "bg-success",
            AutoServis.Models.AppointmentStatus.Canceled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
