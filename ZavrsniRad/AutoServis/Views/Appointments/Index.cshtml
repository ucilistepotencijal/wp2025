@model IEnumerable<AutoServis.Models.Appointment>

@{
    ViewData["Title"] = "Termini";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Termini</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novi termin</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Datum i vrijeme</th>
            <th>Usluga</th>
            <th>Vozilo</th>
            @if (isAdmin)
            {
                <th>Korisnik</th>
            }
            <th>Status</th>
            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ScheduledDate.ToString("dd.MM.yyyy. HH:mm")</td>
                    <td>@item.ServiceType?.Name</td>
                    <td>@item.Vehicle?.LicensePlate</td>
                    @if (isAdmin)
                    {
                        <td>@(item.User?.Email ?? item.User?.UserName)</td>
                    }
                    <td>@item.Status</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalji</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Uredi</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="@(isAdmin ? 6 : 5)" class="text-center text-muted py-4">Nema termina za prikaz.</td>
            </tr>
        }
    </tbody>
</table>