@model AutoServis.Models.Appointment

@{
    ViewData["Title"] = "Detalji termina";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Detalji</h1>

<div>
    <h4>Termin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Datum i vrijeme</dt>
        <dd class="col-sm-9">@Model.ScheduledDate.ToString("dd.MM.yyyy. HH:mm")</dd>

        <dt class="col-sm-3">Usluga</dt>
        <dd class="col-sm-9">@Model.ServiceType?.Name</dd>

        <dt class="col-sm-3">Vozilo</dt>
        <dd class="col-sm-9">@Model.Vehicle?.LicensePlate</dd>

        @if (isAdmin)
        {
            <dt class="col-sm-3">Korisnik</dt>
            <dd class="col-sm-9">@((Model.User?.Email ?? Model.User?.UserName) ?? Model.UserId)</dd>
        }

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Napomena</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Uredi</a>
    <a class="btn btn-secondary" asp-action="Index">Natrag</a>
</div>