@using AutoServis.Models.Admin
@model IEnumerable<UserListItemVM>

@{
    ViewData["Title"] = "Administracija korisnika";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Korisnici</h1>
    <a class="btn btn-primary" asp-action="Create">Dodaj korisnika</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>
                    @if (u.Roles.Any())
                    {
                        foreach (var r in u.Roles)
                        {
                            <span class="badge bg-primary me-1">@r</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    @if (u.IsActive)
                    {
                        <span class="badge bg-success">Aktivan</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Deaktiviran</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary"
                       asp-action="Edit"
                       asp-route-id="@u.Id">
                        Uredi
                    </a>

                    <a class="btn btn-sm btn-outline-warning"
                       asp-action="ResetPassword"
                       asp-route-id="@u.Id">
                        Reset lozinke
                    </a>

                    <form asp-action="ToggleActive" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@u.Id" />
                        @if (u.IsActive)
                        {
                            <button class="btn btn-sm btn-outline-warning" type="submit">
                                Deaktiviraj
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-success" type="submit">
                                Aktiviraj
                            </button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
