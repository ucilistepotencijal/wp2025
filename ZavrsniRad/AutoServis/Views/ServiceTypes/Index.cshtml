@model IEnumerable<AutoServis.Models.ServiceType>

@{
    ViewData["Title"] = "Usluge";
    var isAdmin = User.IsInRole("Admin");
}

<h2 class="mb-4">🔧 Usluge auto servisa</h2>

@if (isAdmin)
{
    <a asp-action="Create" class="btn btn-primary mb-4">
        ➕ Dodaj novu uslugu
    </a>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm service-card @(item.IsActive ? "" : "service-inactive")">
                <div class="card-body d-flex flex-column">

                    <h5 class="card-title fw-bold">
                        @item.Name
                    </h5>

                    <p class="card-text text-muted flex-grow-1">
                        @(string.IsNullOrWhiteSpace(item.Description)
                                            ? "Opis nije unesen."
                                            : item.Description)
                    </p>

                    <ul class="list-unstyled mb-3">
                        <li>
                            ⏱ Trajanje:
                            <strong>@item.DurationMinutes min</strong>
                        </li>

                        @if (item.Price > 0)
                        {
                            <li>
                                💶 Cijena:
                                <strong>@item.Price.ToString("0.00") €</strong>
                            </li>
                        }

                        <li>
                            Status:
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Aktivna</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Neaktivna</span>
                            }
                        </li>
                    </ul>

                    @if (isAdmin)
                    {
                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary">
                                ✏️ Uredi
                            </a>

                            <a asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary">
                                👁 Detalji
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-danger">
                                🗑 Obriši
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <p class="text-muted">Nema definiranih usluga.</p>
}
