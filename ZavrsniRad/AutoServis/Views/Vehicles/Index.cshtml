@model IEnumerable<AutoServis.Models.Vehicle>

@{
    ViewData["Title"] = "Vozila";
    var isAdmin = User.IsInRole("Admin");
}

<h2 class="mb-4">🚗 Vozila</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    ➕ Dodaj novo vozilo
</a>

<div class="table-responsive">
    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Registracija</th>
                <th>Marka / Model</th>
                <th>Godina</th>
                <th>VIN</th>

                @if (isAdmin)
                {
                    <th>Vlasnik</th>
                    <th>Status</th>
                }

                <th class="text-end">Akcije</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr class="@(item.IsActive ? "" : "table-secondary")">
                        <td class="fw-bold">
                            @item.LicensePlate
                        </td>

                        <td>
                            @item.Make @item.Model
                        </td>

                        <td>
                            @item.Year
                        </td>

                        <td>
                            <span class="text-muted">@item.Vin</span>
                        </td>

                        @if (isAdmin)
                        {
                            <td>
                                @(item.User?.Email ?? item.UserId)
                            </td>

                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktivno</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Neaktivno</span>
                                }
                            </td>
                        }

                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-action="Details"
                               asp-route-id="@item.Id"
                               title="Detalji">
                                👁
                            </a>

                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               title="Uredi">
                                ✏️
                            </a>

                            @if (isAdmin)
                            {
                                <form asp-action="ToggleActive"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />

                                    @if (item.IsActive)
                                    {
                                        <button type="submit"
                                                class="btn btn-sm btn-warning"
                                                title="Deaktiviraj">
                                            ⛔
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit"
                                                class="btn btn-sm btn-success"
                                                title="Aktiviraj">
                                            ✅
                                        </button>
                                    }
                                </form>

                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   title="Obriši">
                                    🗑
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(isAdmin ? 7 : 5)"
                        class="text-center text-muted py-4">
                        Nema vozila za prikaz.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
