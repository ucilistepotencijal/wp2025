@model IEnumerable<AutoServis.Models.Vehicle>

@{
    ViewData["Title"] = "Vozila";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Vozila</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj novo</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Godina</th>
            <th>Registracija</th>
            <th>VIN</th>

            @if (isAdmin)
            {
                <th>Vlasnik</th>
                <th>Status</th>
            }

            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Year</td>
                    <td>@item.LicensePlate</td>
                    <td>@item.Vin</td>

                    @if (isAdmin)
                    {
                        <td>@(item.User?.Email ?? item.UserId)</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Aktivno</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Neaktivno</span>
                            }
                        </td>
                    }

                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalji</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Uredi</a>

                        @if (isAdmin)
                        {
                            <form asp-action="ToggleActive" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                @if (item.IsActive)
                                {
                                    <button type="submit" class="btn btn-sm btn-outline-warning">Deaktiviraj</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-sm btn-outline-success">Aktiviraj</button>
                                }
                            </form>

                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="@(isAdmin ? 8 : 6)" class="text-center text-muted py-4">
                    Nema vozila za prikaz.
                </td>
            </tr>
        }
    </tbody>
</table>
