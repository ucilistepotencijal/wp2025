@model AutoServis.Models.Vehicle

@{
    ViewData["Title"] = "Detalji vozila";
    var isAdmin = User.IsInRole("Admin");
}

<h2 class="mb-4">🚗 Detalji vozila</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title fw-bold">
            @Model.Make @Model.Model (@Model.Year)
        </h5>

        <p class="mb-1">
            <strong>Registracija:</strong> @Model.LicensePlate
        </p>

        <p class="mb-1">
            <strong>VIN:</strong> @Model.Vin
        </p>

        @if (isAdmin)
        {
            <p class="mb-1">
                <strong>Vlasnik:</strong> @(Model.User?.Email ?? Model.UserId)
            </p>

            <p>
                <strong>Status:</strong>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Aktivno</span>
                }
                else
                {
                    <span class="badge bg-secondary">Neaktivno</span>
                }
            </p>
        }
    </div>
</div>

<h4 class="mb-3">🧾 Povijest servisa</h4>

@if (Model.Appointments != null && Model.Appointments.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Datum</th>
                    <th>Usluga</th>
                    <th>Status</th>
                    <th class="text-end">Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.Appointments.OrderByDescending(a => a.ScheduledDate))
                {
                    <tr>
                        <td>
                            @a.ScheduledDate.ToString("dd.MM.yyyy HH:mm")
                        </td>

                        <td>
                            @a.ServiceType?.Name
                        </td>

                        <td>
                            <span class="badge @GetStatusClass(a.Status)">
                                @a.Status
                            </span>
                        </td>

                        <td class="text-end">
                            <a asp-controller="Appointments"
                               asp-action="Details"
                               asp-route-id="@a.Id"
                               class="btn btn-sm btn-outline-secondary"
                               title="Detalji termina">
                                👁
                            </a>

                            @if (isAdmin)
                            {
                                <a asp-controller="Appointments"
                                   asp-action="Edit"
                                   asp-route-id="@a.Id"
                                   class="btn btn-sm btn-outline-primary"
                                   title="Uredi termin">
                                    ✏️
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted">
        Ovo vozilo još nema evidentiranih servisa.
    </p>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        ✏️ Uredi vozilo
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        ⬅ Natrag na popis
    </a>
</div>

@functions {
    string GetStatusClass(AutoServis.Models.AppointmentStatus status)
    {
        return status switch
        {
            AutoServis.Models.AppointmentStatus.Scheduled => "bg-warning text-dark",
            AutoServis.Models.AppointmentStatus.InProgress => "bg-info text-dark",
            AutoServis.Models.AppointmentStatus.Completed => "bg-success",
            AutoServis.Models.AppointmentStatus.Canceled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
