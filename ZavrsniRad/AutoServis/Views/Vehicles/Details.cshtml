@model AutoServis.Models.Vehicle

@{
    ViewData["Title"] = "Detalji vozila";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Detalji</h1>

<div>
    <h4>Vozilo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Marka</dt>
        <dd class="col-sm-10">@Model.Make</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Godina</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Registracija</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>

        <dt class="col-sm-2">VIN</dt>
        <dd class="col-sm-10">@Model.Vin</dd>

        @if (isAdmin)
        {
            <dt class="col-sm-2">Vlasnik</dt>
            <dd class="col-sm-10">@(Model.User?.Email ?? Model.UserId)</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Aktivno</span>
                }
                else
                {
                    <span class="badge bg-secondary">Neaktivno</span>
                }
            </dd>
        }
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Uredi</a>
    <a asp-action="Index" class="btn btn-secondary">Natrag na popis</a>
</div>
