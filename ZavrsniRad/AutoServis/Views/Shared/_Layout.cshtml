<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auto Servis Kod Baje</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoServis.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo1.png"
                         alt="Auto Servis Kod Baje"
                         class="navbar-logo" />
                    <span class="fw-bold">Kod Baje</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Početna
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vehicles" asp-action="Index">
                                    Vozila
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                                    Termini
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <!-- DASHBOARD -->
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold"
                                       asp-controller="Admin"
                                       asp-action="Index">
                                        Dashboard
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ServiceTypes" asp-action="Index">
                                        Usluge
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">
                                        Administracija
                                    </a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                Privatnost
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom mt-auto">
        <div class="container text-center">
            <span class="footer-text">
                &copy; 2025 – Auto Servis <strong class="footer-brand">Kod Baje</strong>
            </span>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
