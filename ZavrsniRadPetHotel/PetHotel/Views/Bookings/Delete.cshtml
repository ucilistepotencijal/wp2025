@model PetHotel.Models.Booking

@{
    ViewData["Title"] = "Otkaži/Obriši rezervaciju";
}

<div class="container mt-4">
    <div class="alert alert-danger shadow-sm border-start border-5 border-danger" role="alert">
        <h4 class="alert-heading fw-bold">⚠️ Jeste li sigurni?</h4>
        <p>Želite li trajno obrisati rezervaciju za ljubimca <strong>@Model.Pet?.Name</strong>?</p>
        <hr>
        <p class="mb-0 small">Ova radnja će ukloniti termin iz kalendara hotela.</p>
    </div>

    <div class="card shadow-sm mt-4 border-0">
        <div class="card-body p-4">
            <h5 class="card-title text-muted mb-4">Podaci o rezervaciji:</h5>
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted small text-uppercase">Ljubimac:</dt>
                <dd class="col-sm-9 fw-bold">🐾 @Model.Pet?.Name</dd>

                <dt class="col-sm-3 text-muted small text-uppercase">Termin:</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3 text-muted small text-uppercase">Usluga:</dt>
                <dd class="col-sm-9">@Model.ServiceType?.Name</dd>

                <dt class="col-sm-3 text-muted small text-uppercase">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-light text-dark border">@Model.Status</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-white border-0 p-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">Obriši trajno</button>
                <a asp-action="Index" class="btn btn-link text-secondary ms-2">Odustani i vrati se</a>
            </form>
        </div>
    </div>
</div>