@model PetHotel.Models.Booking

@{
    ViewData["Title"] = "Uredi rezervaciju";
}

<div class="container mt-4">
    <h1 class="text-primary">Uredi rezervaciju</h1>
    <hr />

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="card shadow-sm p-4">
                    <div class="form-group mb-3">
                        <label asp-for="PetId" class="control-label fw-bold">Odaberi ljubimca</label>
                        <select asp-for="PetId" class="form-control" asp-items="ViewBag.PetId"></select>
                        <span asp-validation-for="PetId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group mb-3">
                            <label asp-for="StartDate" class="control-label fw-bold">Datum dolaska</label>
                            <input asp-for="StartDate" class="form-control" type="date" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group mb-3">
                            <label asp-for="EndDate" class="control-label fw-bold">Datum odlaska</label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ServiceTypeId" class="control-label fw-bold">Vrsta usluge</label>
                        <select asp-for="ServiceTypeId" class="form-control" asp-items="ViewBag.ServiceTypeId"></select>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Status" class="control-label fw-bold">Status rezervacije</label>
                        <select asp-for="Status" class="form-control">
                            <option value="0">U obradi</option>
                            <option value="1">Potvrđeno</option>
                            <option value="2">Otkazano</option>
                        </select>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Notes" class="control-label fw-bold">Posebne napomene</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Npr. dolazi s vlastitom hranom..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">Spremi promjene</button>
                        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}