@model PetHotel.Models.Booking

@{
    ViewData["Title"] = "Rezerviraj termin";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card shadow-sm p-4">
                <div class="form-group mb-3">
                    <label asp-for="PetId" class="control-label fw-bold">Odaberi ljubimca</label>
                    <select asp-for="PetId" class="form-control" asp-items="ViewBag.PetId">
                        <option value="">-- Odaberite psa --</option>
                    </select>
                    <span asp-validation-for="PetId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceTypeId" class="control-label fw-bold">Vrsta usluge</label>
                    <select asp-for="ServiceTypeId" class="form-control" asp-items="ViewBag.ServiceTypeId">
                        <option value="">-- Odaberite uslugu --</option>
                    </select>
                    <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="StartDate" class="control-label fw-bold">Datum dolaska</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="EndDate" class="control-label fw-bold">Datum odlaska</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Notes" class="control-label fw-bold">Napomene</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Dodatne napomene za ovaj termin..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success px-4">Spremi</button>
                    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}