@model PetHotel.Models.Booking

@{
    ViewData["Title"] = "Nova rezervacija";
}
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group d-none">
    <label asp-for="UserId" class="control-label"></label>
    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>

</div>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0"><span style="font-size: 1.2rem;">2. KORAK:</span> Rezervacija termina</h3>
                </div>
                <div class="card-body p-4" style="background-color: #fdfaf5;">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-bold text-dark">Datum dolaska</label>
                                <input asp-for="StartDate" type="date" class="form-control border-primary-subtle" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-bold text-dark">Datum odlaska</label>
                                <input asp-for="EndDate" type="date" class="form-control border-primary-subtle" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PetId" class="form-label fw-bold text-dark">Odaberite ljubimca</label>
                            <select asp-for="PetId" class="form-select border-primary-subtle shadow-sm" asp-items="ViewBag.PetId">
                                <option value="">-- Vaši ljubimci --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ServiceTypeId" class="form-label fw-bold text-dark">Vrsta usluge</label>
                            <select asp-for="ServiceTypeId" class="form-select border-primary-subtle shadow-sm" asp-items="ViewBag.ServiceTypeId">
                                <option value="">-- Odaberite uslugu --</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-bold text-dark">Napomena (hrana, lijekovi...)</label>
                            <textarea asp-for="Notes" class="form-control border-primary-subtle" rows="3" placeholder="Ima li vaša šapica posebne potrebe?"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Povratak</a>
                            <button type="submit" class="btn btn-primary px-5 shadow">Potvrdi rezervaciju</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>