<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Popis rezervacija</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-calendar-plus me-2"></i> Nova rezervacija
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-sapotel">
            <thead>
                <tr>
                    <th>Ljubimac</th>
                    <th>Datum dolaska</th>
                    <th>Datum odlaska</th>
                    <th>Usluga</th>
                    <th>Napomena</th>
                    <th class="text-center">Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            <i class="fas fa-paw text-primary me-2"></i> @item.Pet?.Name
                        </td>
                        <td>
                            <span class="text-muted"><i class="far fa-calendar-alt me-1"></i></span>
                            @item.StartDate.ToShortDateString()
                        </td>
                        <td>
                            <span class="text-muted"><i class="far fa-calendar-check me-1"></i></span>
                            @item.EndDate.ToShortDateString()
                        </td>
                        <td>
                            <span class="badge bg-info text-dark" style="background-color: #e3f2fd !important; border: 1px solid #90caf9 !important;">
                                @item.ServiceType?.Name
                            </span>
                        </td>
                        <td>
                            <small class="text-muted italic">
                                @(string.IsNullOrEmpty(item.Notes) ? "Nema napomene" : item.Notes)
                            </small>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit">Uredi</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn-details">Detalji</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn-delete">Obriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>