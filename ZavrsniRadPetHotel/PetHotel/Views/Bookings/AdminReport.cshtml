@model IEnumerable<PetHotel.Models.Booking>

@{
    ViewData["Title"] = "Upravljanje Hotelom";

    decimal ukupnaZaradaHotela = 0;
    int brojAktivnih = 0;
    var danas = DateTime.Now.Date;

    foreach (var b in Model)
    {
        var dani = (b.EndDate - b.StartDate).Days;
        if (dani <= 0) dani = 1;
        ukupnaZaradaHotela += (dani * (b.ServiceType?.Price ?? 0));

        if (b.StartDate.Date <= danas && b.EndDate.Date >= danas)
        {
            brojAktivnih++;
        }
    }
}

<div class="container mt-4">
    @* NASLOV I GUMB ZA PRINT *@
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">🐾 Upravljanje Hotelom</h2>
            <p class="text-muted small mb-0">Pregled stanja na dan @danas.ToShortDateString()</p>
        </div>
        <button onclick="window.print()" class="btn btn-light btn-sm border shadow-sm">
            🖨️ Isprintaj dnevnik
        </button>
    </div>

    @* 1. STATISTIČKE KARTICE - Skladnije boje *@
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 border-bottom border-4 border-success rounded-top">
                    <h6 class="text-uppercase text-muted small fw-bold">Ukupni Prihod</h6>
                    <h3 class="fw-bold mb-0">@ukupnaZaradaHotela.ToString("N2") €</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 border-bottom border-4 border-primary rounded-top">
                    <h6 class="text-uppercase text-muted small fw-bold">Sve Rezervacije</h6>
                    <h3 class="fw-bold mb-0">@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 border-bottom border-4 border-info rounded-top">
                    <h6 class="text-uppercase text-muted small fw-bold">Trenutno Gostiju</h6>
                    <h3 class="fw-bold mb-0">@brojAktivnih <small class="text-muted small">njuškica</small></h3>
                </div>
            </div>
        </div>
    </div>

    @* 2. DANAS U HOTELU - Bez bljeskanja, čišće kartice *@
    <div class="mb-5">
        <h5 class="fw-bold mb-3 text-secondary">🕒 Trenutno prisutni gosti</h5>
        <div class="row g-3">
            @{
                var danasnjiGosti = Model.Where(b => b.StartDate.Date <= danas && b.EndDate.Date >= danas).ToList();
            }

            @if (!danasnjiGosti.Any())
            {
                <div class="col-12">
                    <div class="p-4 bg-light rounded text-center border">
                        <p class="text-muted mb-0">Danas nema aktivnih njuškica u hotelu.</p>
                    </div>
                </div>
            }
            else
            {
                @foreach (var gost in danasnjiGosti)
                {
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="fw-bold mb-0">🐾 @gost.Pet?.Name</h6>
                                    <span class="badge bg-info text-white small">@gost.ServiceType?.Name</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="small text-muted">Soba: #@gost.PetId</span>
                                    <a asp-controller="Pets" asp-action="Details" asp-route-id="@gost.PetId" class="btn btn-sm btn-outline-primary py-0 px-2" style="font-size: 0.8rem;">Profil</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    @* 3. POVIJEST - Elegantna tablica *@
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="mb-0 fw-bold text-dark text-uppercase small">Povijest i obračuni</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-muted small">
                        <tr>
                            <th class="ps-4">Gost</th>
                            <th>Usluga</th>
                            <th>Termin boravka</th>
                            <th>Dana</th>
                            <th class="text-end pe-4">Iznos</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.StartDate))
                        {
                            var dani = (item.EndDate - item.StartDate).Days;
                            if (dani <= 0) dani = 1;
                            var ukupno = dani * (item.ServiceType?.Price ?? 0);

                            <tr>
                                <td class="ps-4 fw-bold">@item.Pet?.Name</td>
                                <td><span class="text-muted">@item.ServiceType?.Name</span></td>
                                <td class="small">@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</td>
                                <td>@dani</td>
                                <td class="text-end pe-4 fw-bold text-dark">@ukupno.ToString("N2") €</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>