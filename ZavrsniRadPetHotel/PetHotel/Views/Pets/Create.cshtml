@model PetHotel.Models.Pet

@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "Create" ? "Dodaj ljubimca" : "Uredi ljubimca";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="@ViewContext.RouteData.Values["action"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewContext.RouteData.Values["action"].ToString() == "Edit")
            {
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
            }

            <div class="card shadow-sm p-4">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label fw-bold">Ime ljubimca</label>
                    <input asp-for="Name" class="form-control" placeholder="Unesite ime psa" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Breed" class="control-label fw-bold">Pasmina</label>
                        <input asp-for="Breed" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Size" class="control-label fw-bold">Veličina</label>
                        <select asp-for="Size" class="form-control">
                            <option value="Mali">Mali (do 10kg)</option>
                            <option value="Srednji">Srednji (10-25kg)</option>
                            <option value="Veliki">Veliki (preko 25kg)</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="BirthYear" class="control-label fw-bold">Godina rođenja</label>
                        <input asp-for="BirthYear"
                               class="form-control"
                               type="number"
                               max="@DateTime.Now.Year"
                               step="1" />
                        <span asp-validation-for="BirthYear" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="MicrochipNumber" class="control-label fw-bold">Broj mikročipa</label>
                        <input asp-for="MicrochipNumber" class="form-control" />
                    </div>
                </div>

                <div class="form-check mb-3 p-0 ms-4">
                    <input class="form-check-input" asp-for="IsSocialized" />
                    <label class="form-check-label ms-2">Pas je socijaliziran</label>
                </div>

                <div class="form-check mb-3 p-0 ms-4">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label ms-2">Ljubimac je trenutno aktivan u hotelu</label>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PersonalNotes" class="control-label fw-bold">Napomene</label>
                    <textarea asp-for="PersonalNotes" class="form-control" rows="3" placeholder="Alergije, posebna prehrana, strahovi..."></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success px-4">Spremi</button>
                    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
                </div>
            </div>
        </form>
    </div>
</div>