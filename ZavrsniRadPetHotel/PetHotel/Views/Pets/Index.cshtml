@model IEnumerable<PetHotel.Models.Pet>

@{
    ViewData["Title"] = "Popis šapica";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">🐾 Popis šapica</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            + Dodaj novog ljubimca
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-secondary">
                            <th class="ps-4">Ime</th>
                            <th>Pasmina</th>
                            <th>Veličina</th>
                            <th>Godina</th>
                            <th>Mikročip</th>
                            <th>Socijaliziran</th>
                            <th>Aktivan</th>
                            <th class="text-center">Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@item.Name</td>
                                <td>@(item.Breed ?? "Mješanac")</td>
                                <td><span class="badge rounded-pill bg-info text-dark fw-normal">@item.Size</span></td>
                                <td>@item.BirthYear.</td>
                                <td class="text-muted">@item.MicrochipNumber</td>
                                <td>@(item.IsSocialized ? "✅ Da" : "❌ Ne")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktivan</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted border">Neaktivan</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Uredi</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Detalji</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Obriši</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>