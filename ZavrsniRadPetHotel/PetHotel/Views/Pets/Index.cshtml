@model IEnumerable<PetHotel.Models.Pet>

@{
    ViewData["Title"] = "Popis ljubimaca";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 text-primary fw-bold"><i class="bi bi-dog"></i> Hotelski Gosti</h1>
            <p class="text-muted">Pregled svih pasa registriranih u hotelu.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle-fill me-2"></i>Dodaj novog ljubimca
        </a>
    </div>

    <div class="card shadow border-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr class="text-uppercase small fw-bold">
                        <th class="ps-4">Ime i Pasmina</th>
                        <th>Veličina</th>
                        <th>Godina</th>
                        <th>Mikročip</th>
                        <th>Status</th>
                        <th>Vlasnik</th>
                        <th class="text-center">Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                                        <i class="bi bi-paw-fill"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.Name</div>
                                        <div class="small text-muted">@item.Breed</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.Size == "Veliki")
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">@item.Size</span>
                                }
                                else if (item.Size == "Srednji")
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">@item.Size</span>
                                }
                                else
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">@item.Size</span>
                                }
                            </td>
                            <td class="text-muted">@item.BirthYear.</td>
                            <td class="font-monospace small">@item.MicrochipNumber</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="text-success"><i class="bi bi-check-circle-fill me-1"></i>Aktivan</span>
                                }
                                else
                                {
                                    <span class="text-secondary"><i class="bi bi-x-circle me-1"></i>Neaktivan</span>
                                }
                            </td>
                            <td>
                                <div class="small">
                                    <i class="bi bi-envelope-at text-muted me-1"></i>
                                    @(item.User?.Email ?? "Nema podataka")
                                </div>
                            </td>
                            <td class="text-center pe-4">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-warning" title="Uredi">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-info" title="Detalji">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-danger" title="Obriši">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-search display-1 text-light"></i>
                <p class="mt-3 text-muted">Nema pronađenih ljubimaca u bazi.</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}