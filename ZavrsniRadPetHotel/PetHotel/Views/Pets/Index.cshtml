@model IEnumerable<PetHotel.Models.Pet>

@{
    ViewData["Title"] = "Moji Psi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>🐾 Moji Psi</h1>
    <a asp-action="Create" class="btn btn-primary rounded-pill shadow-sm">+ Dodaj psa</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Breed</h6>
                    <hr />
                    <p class="card-text">
                        <strong>Veličina:</strong> @Html.DisplayFor(model => item.Size) <br />
                        <strong>Godina rođenja:</strong> @item.BirthYear <br />
                        <strong>Socijaliziran:</strong> @(item.IsSocialized ? "✅ Da" : "❌ Ne")
                    </p>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-around pb-3">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Uredi</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detalji</a>
                </div>
            </div>
        </div>
    }
</div>