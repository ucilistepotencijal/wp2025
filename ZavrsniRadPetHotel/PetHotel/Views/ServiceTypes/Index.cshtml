@model IEnumerable<PetHotel.Models.ServiceType>

@{
    ViewData["Title"] = "Upravljanje uslugama";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">⚙️ Katalog usluga</h1>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            + Dodaj novu uslugu
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-secondary small text-uppercase">
                            <th class="ps-4">Naziv usluge</th>
                            <th>Opis</th>
                            <th>Cijena po danu</th>
                            <th>Status</th>
                            <th class="text-center">Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Name</td>
                                <td class="text-muted small" style="max-width: 300px;">
                                    @item.Description
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">@item.Price.ToString("F2") €</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle fw-normal">Aktivno</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted border fw-normal">Nije dostupno</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Uredi</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Detalji</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Obriši</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>