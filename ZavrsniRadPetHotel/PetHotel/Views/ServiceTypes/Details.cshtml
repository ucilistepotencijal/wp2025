@model PetHotel.Models.ServiceType

@{
    ViewData["Title"] = "Detalji usluge";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">⚙️ Informacije o usluzi</h1>

    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white p-3">
            <h3 class="mb-0">Usluga: @Model.Name</h3>
        </div>
        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-sm-4 fw-bold text-muted text-uppercase small">Naziv usluge:</div>
                <div class="col-sm-8 fs-5 fw-bold">@Model.Name</div>
            </div>
            <hr />
            <div class="row mb-4">
                <div class="col-sm-4 fw-bold text-muted text-uppercase small">Opis:</div>
                <div class="col-sm-8">
                    <p class="text-secondary">@(Model.Description ?? "Nema opisa za ovu uslugu.")</p>
                </div>
            </div>
            <hr />
            <div class="row mb-4">
                <div class="col-sm-4 fw-bold text-muted text-uppercase small">Cijena po danu:</div>
                <div class="col-sm-8 fs-4 text-primary fw-bold">
                    @Model.Price.ToString("F2") €
                </div>
            </div>
            <hr />
            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-muted text-uppercase small">Dostupnost:</div>
                <div class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success px-3 py-2">Aktivna ✅</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary px-3 py-2">Onesposobljena ❌</span>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer bg-light p-3">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 shadow-sm">Uredi</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Povratak na popis</a>
            </div>
        </div>
    </div>
</div>