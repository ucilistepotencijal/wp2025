@model PetHotel.Models.ServiceType

@{
    ViewData["Title"] = "Brisanje usluge";
}

<div class="container mt-4">
    <div class="alert alert-danger shadow-sm border-start border-5 border-danger" role="alert">
        <h4 class="alert-heading fw-bold">⚠️ Brisanje vrste usluge</h4>
        <p>Jeste li sigurni da želite trajno ukloniti uslugu <strong>@Model.Name</strong> iz ponude?</p>
        <hr>
        <p class="mb-0 small text-dark">Napomena: Brisanje usluge može utjecati na povijest rezervacija koje su povezane s njom.</p>
    </div>

    <div class="card shadow-sm mt-4 border-0">
        <div class="card-body p-4">
            <h5 class="card-title text-muted mb-4">Podaci o usluzi:</h5>
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted small text-uppercase">Naziv:</dt>
                <dd class="col-sm-9 fw-bold">@Model.Name</dd>

                <dt class="col-sm-3 text-muted small text-uppercase">Cijena:</dt>
                <dd class="col-sm-9 text-danger fw-bold">@Model.Price.ToString("F2") € / dan</dd>

                <dt class="col-sm-3 text-muted small text-uppercase">Opis:</dt>
                <dd class="col-sm-9 text-secondary small">@(Model.Description ?? "Nema opisa")</dd>
            </dl>
        </div>
        <div class="card-footer bg-white border-0 p-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">Potvrdi brisanje</button>
                <a asp-action="Index" class="btn btn-link text-secondary ms-2">Odustani i vrati se</a>
            </form>
        </div>
    </div>
</div>