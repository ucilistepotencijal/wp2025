@page
@model LoginModel
@{
    ViewData["Title"] = "Prijava";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-header bg-primary text-white text-center py-4" style="border-radius: 15px 15px 0 0;">
                    <h2 class="fw-bold mb-0">Dobrodošli u <span style="color: #f1c40f;">Šapotel</span></h2>
                </div>
                <div class="card-body p-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ime@primjer.com" />
                            <label asp-for="Input.Email">Email adresa</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="lozinka" />
                            <label asp-for="Input.Password">Lozinka</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Zapamti me?
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary shadow-sm">Prijavi se</button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="small">
                            Nemaš račun? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Registriraj se ovdje</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>