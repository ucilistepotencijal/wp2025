@model string
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kalkulator</title>
    <style>
        div {
            margin-bottom: 10px;
        }
        label {
            display: inline-block;
            width: 80px;
        }
        input[type="text"] {
            width: 100px;
        }
    </style>
</head>
<body>
    <div>
        <form method="post">
            <div>
                <label>Prvi broj:</label>
                <input type="text" name="broj1" />
            </div>
            <div>
                <label>Drugi broj:</label>
                <input type="text" name="broj2" />
            </div>
            <div>
                <input type="submit" value="+" name="operacija" />
                <input type="submit" value="-" name="operacija" />
                <input type="submit" value="*" name="operacija" />
                <input type="submit" value="/" name="operacija" />
            </div>
        </form>
        <div>
            @ViewBag.Broj1 @ViewBag.Operacija @ViewBag.Broj2 @Model
        </div>
    </div>
</body>
</html>
