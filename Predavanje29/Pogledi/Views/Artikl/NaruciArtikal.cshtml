@model Artikl
@{
}
<html>
<head>
    <meta charset="utf-8" />
    <title>Naruci Artikal</title>
</head>
<body>
    <div>
        <form method="post">
            <div>
                <label>Kategorija</label>
                <select name="Kategorija">
                    <option>Žitarice</option>
                    <option>Meso</option>
                    <option>Povrće</option>
                    <option>Voće</option>
                </select>
            </div>
            <div>
                <label>Naziv</label>
                <input type="text" name="Naziv" />
            </div>
            <div>
                <label>Cijena</label>
                <input type="text" name="Cijena" />
            </div>
            <div>
                <label>Količina</label>
                <input type="number" name="Kolicina" />
            </div>
            <div>
                <button type="submit">Naruči</button>
            </div>
        </form>
        <div>
            @ViewBag.Poruka
        </div>
    </div>
</body>
</html>