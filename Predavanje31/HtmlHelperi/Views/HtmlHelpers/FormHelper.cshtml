@model Osoba
@{
    Layout = null;
}
<head>
    <style>
        .crvenaBoja
        {
            color: red;
            width: 250px;
        }
        label, input, select
        {
            margin: 5px;
            width: 150px;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div>
        @using(Html.BeginForm())
        {
            <div>
                @Html.Label("Ime")
                @Html.TextBox("Ime")
            </div>
            <div>
                @Html.Label("Prezime")
                @Html.TextBox("Prezime")
            </div>
            <div>
                @Html.Label("Email")
                @Html.TextBox("Email")
            </div>
            <div>
                @Html.Label("MjestoStanovanja")
                @Html.DropDownList("MjestoStanovanja", new SelectList((string[])ViewBag.Mjesta), "--Odaberi--")
            </div>
            <div>
                @Html.Label("Spol")
                @Html.RadioButton("Spol", "Muški") Muški
                @Html.RadioButton("Spol", "Ženski") Ženski
            </div>
            <div>
                @Html.Label("Zaposlen")
                @Html.CheckBox("Zaposlen")
            </div>
            <div>
                <input type="submit" value="Pošalji" />
            </div>
        }
    </div>
    <p>
        <label class="crvenaBoja">@ViewBag.Poruka</label>
    </p>
</body>


