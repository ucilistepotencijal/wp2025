@model HtmlHelperi.Models.Osoba

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Generated</title>
</head>
<body>

    <h4>Osoba</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Generated">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Ime" class="control-label"></label>
                    <input asp-for="Ime" class="form-control" />
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prezime" class="control-label"></label>
                    <input asp-for="Prezime" class="form-control" />
                    <span asp-validation-for="Prezime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MjestoStanovanja" class="control-label"></label>
                    <select asp-for="MjestoStanovanja" class="form-control" asp-items="@ViewBag.Mjesta">
                        <option value="">--Odaberi--</option>
                    </select>
                    <span asp-validation-for="MjestoStanovanja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Spol" class="control-label"></label>
                    <input asp-for="Spol" class="form-control" type="radio" value="Muški" />
                    <label>Muški</label>
                    <input asp-for="Spol" class="form-control" type="radio" value="Ženski" />
                    <label>Ženski</label>
                    <span asp-validation-for="Spol" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Zaposlen" /> @Html.DisplayNameFor(model => model.Zaposlen)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="crvenaBoja">
        @ViewBag.Poruka
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
